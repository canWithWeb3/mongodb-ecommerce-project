<main class="home">
    <!-- slider start -->
    <section class="slider mb-3">
        <div class="content">
            <div class="fs-3 text-muted">New Shop Collection</div>
            <h2 class="display-5 fw-bold">Find Your Favorite <span class="d-block text-primary">Clothing Collection</span></h2>
            <div class="fs-4 text-muted mb-4">Up To 40% Off Final Sale Items</div>
            <button class="btn btn-primary">Show Collection</button>
        </div>
    </section>
    <!-- slider finish -->

    <!-- slider down start -->
    <section class="slider-down mb-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 text-end mx-auto mb-3">
                    <div class="card border-0 position-relative">
                        <img src="/static/img/b-1.jpg" alt="" class="card-img-top">
                        <div class="position-absolute bottom-0 end-0 pe-3 pb-3">
                            <h5 class="text-primary">Don't Miss Today</h5>
                            <h5>50% Off</h5>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 text-end mx-auto mb-3">
                    <div class="card border-0 position-relative">
                        <img src="/static/img/b-2.jpg" alt="" class="card-img-top">
                        <div class="position-absolute bottom-0 end-0 pe-3 pb-3">
                            <h5 class="text-primary">New Collection</h5>
                            <h5 class="mb-3">Need Now</h5>
                            <a href="#" class="btn btn-outline-primary">Discover Now</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 text-end mx-auto mb-3">
                    <div class="card border-0 position-relative">
                        <img src="/static/img/b-3.jpg" alt="" class="card-img-top">
                        <div class="position-absolute bottom-0 end-0 pe-3 pb-3">
                            <h5 class="text-primary">Don't Miss Today</h5>
                            <h5>50% Off</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- slider down finish -->

    <!-- new products start -->
    <section class="new-products mb-5">
        <div class="container">
            <h2 class="h3 text-center mb-5">New Products</h2>

            <div class="row">
                <% products.forEach(product => { %>
                    <div class="col-xl-3 col-lg-4 col-6 mb-4">
                        <a href="/product-detail/<%= product._id %>" class="text-decoration-none">
                            <div class="card border-0">
                                <img src="/static/uploads/<%= product.image %>" alt="" class="card-img-top mb-2">
                                <h5><%= product.name %></h5>
                                <div class="stars text-warning mb-2">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </div>
                                <div class="d-flex align-items-center gap-3 flex-wrap">
                                    <span class="text-primary fs-4">$35</span>
                                    <span class="fs-5 text-decoration-line-through text-muted">$40</span>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>
    <!-- new products finish -->

    <!-- blogs start -->
    <section class="blogs">
        <div class="container">
            <h2 class="h3 text-center mb-5">Blogs</h2>

            <div class="row">
                <div class="col-xl-3 col-lg-4 col-6 mb-3">
